<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1656147274-1" author="Patryk">
        <createTable tableName="user">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_user" nullable="false"/>
            </column>
            <column name="email" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="user" columnNames="email" constraintName="uc_user_email"/>
    </changeSet>

    <changeSet id="1656272140-1" author="Patryk">
        <createTable tableName="confirmation_code">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_confirmation_code" nullable="false"/>
            </column>
            <column name="code" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="code_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="confirmation_code" baseColumnNames="user_id"
                                 referencedTableName="user" referencedColumnNames="id"
                                 constraintName="fk_confirmation_code_user_id"
                                 deferrable="false" initiallyDeferred="false"
                                 onDelete="CASCADE" onUpdate="RESTRICT"/>
    </changeSet>

</databaseChangeLog>